<?xml version="1.0" encoding="ISO-8859-1"?>


<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>

   <servlet>
        <servlet-name>content</servlet-name>
        <servlet-class>org.eclipse.help.servlet.ContentServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>init</servlet-name>
        <servlet-class>org.eclipse.help.servlet.InitServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>livehelp</servlet-name>
        <servlet-class>org.eclipse.help.servlet.LiveHelpServlet</servlet-class>
    </servlet>
        
	<servlet-mapping>
		<servlet-name>content</servlet-name>
		<url-pattern>/servlet/org.eclipse.help.servlet.ContentServlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>init</servlet-name>
		<url-pattern>/servlet/org.eclipse.help.servlet.InitServlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>livehelp</servlet-name>
		<url-pattern>/servlet/org.eclipse.help.servlet.LiveHelpServlet</url-pattern>
	</servlet-mapping>
	
    <servlet-mapping>
        <servlet-name>content</servlet-name>
        <url-pattern>/content/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>content</servlet-name>
        <url-pattern>/ns4/content/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>livehelp</servlet-name>
        <url-pattern>/livehelp/*</url-pattern>
    </servlet-mapping>
    
</web-app>

