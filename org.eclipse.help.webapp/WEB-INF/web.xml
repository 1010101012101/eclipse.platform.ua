<?xml version="1.0" encoding="ISO-8859-1"?>


<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<filter>
		<filter-name>SetUtf8Filter</filter-name>
		<filter-class>org.eclipse.help.servlet.SetUtf8Filter</filter-class>
    </filter>

	<filter-mapping>
		<filter-name>SetUtf8Filter</filter-name>
        <url-pattern>/*</url-pattern>
	</filter-mapping>

   <servlet>
        <servlet-name>content</servlet-name>
        <servlet-class>org.eclipse.help.servlet.ContentServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>init</servlet-name>
        <servlet-class>org.eclipse.help.servlet.InitServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>content</servlet-name>
        <url-pattern>/content/*</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>content</servlet-name>
        <url-pattern>/ns4/content/*</url-pattern>
    </servlet-mapping>
    
</web-app>
