<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

    
<!-- ========== Extension Points ================= -->
<!-- =============================================================================== -->
<!-- Extension point: org.eclipse.ui.intro.config                                    -->
<!-- Extension-point for contributing a configuration to a Customizable Intro Part.  -->
<!--                                                                                 -->
<!-- =============================================================================== -->
   <extension-point id="config" name="%config" schema="schema/config.exsd"/>
<!-- ================================================================================= -->
<!-- Extension point: org.eclipse.ui.intro.configExtension                             -->
<!-- Extension-point for contributing an extension to an existing intro configuration  -->
<!--                                                                                   -->
<!-- ================================================================================= -->
   <extension-point id="configExtension" name="%configExtension" schema="schema/configExtension.exsd"/>
   
   <extension
         point="org.eclipse.ui.intro.configExtension">
      <standbyContentPart
            pluginId="org.eclipse.ui.intro"
            class="org.eclipse.ui.internal.intro.impl.parts.EmptyStandbyContentPart"
            id="org.eclipse.ui.intro.config.emptyStandby">
      </standbyContentPart> 
   </extension>
   <extension
         point="org.eclipse.help.base.luceneSearchParticipants">
      <searchParticipant
            icon="icons/welcome_item.gif"
            id="org.eclipse.ui.intro"
            name="Welcome"
            participant="org.eclipse.ui.internal.intro.impl.model.IntroSearchParticipant"/>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            icon="shared/css/graphics/icons/etool/overview.gif"
            id="org.eclipse.ui.intro.shared"/>
      <introProductBinding
            introId="org.eclipse.ui.intro.shared"
            productId="org.eclipse.ui.intro.product"/>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            content="$nl$/shared/introContent.xml"
            id="org.eclipse.ui.intro.sharedConfig"
            introId="org.eclipse.ui.intro.shared">
         <presentation
               home-page-id="root" standby-page-id="standby">
             <implementation
                  style="$nl$/shared/css/shared.css"
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
            <implementation
                  kind="swt">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            description="TestProductForSharedIntro"
            name="TestIntroProduct">
         <property
               name="sharedIntroData"
               value="sharedIntroData.xml"/>
      </product>
   </extension>     
   
 
     

</plugin>
